<div class = "container-fluid">
  <div class = "jumbotron">
    <div class = "row center-row">
      <p>Edit Showtime</p>
    </div>
    <%= form_for [@movie, @showtime], method: :put do |s| %>
      <div class = "row center-row">
        <div class = "col-md-6">
          <% @movies.each do |movie| %>
            <div class= "row">
            <%= movie.name %>:  <%= s.radio_button(:movie_id, "#{movie.name}") %>
            </div>
          <% end %>
        </div>
        <div class = "col-md-6">
          <div class = "row center-row">
            <%= s.label "Price" %>
          </div>
          <div class = "row center-row">
            <%= s.text_field :price %>
          </div>
          <div class = "row center-row">
            <%= s.label "Start Time"%>
          </div>
          <div class = "row center-row">
            <%= s.datetime_select :start %>
          </div>
        </div>
      </div>
      <div class = "row center-row">
        <%=s.submit "Edit Showtime", class: 'submit-button' %>
      </div>
    <% end %>
    <% if @errors %>
      <div class="errors-container">
        <h3 class="errors-header">ERRORS:</h3>
        <ol class="errors-list">
          <% @errors.uniq.each do |error| %>
            <li class="error-list-item"><%= error %></li>
          <% end %>
        </ol>
      </div>
    <% end %>
  </div>
</div>